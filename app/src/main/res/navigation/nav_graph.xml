<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="dev.hawk0f.itutor.features.auth.presentation.ui.AuthFragment"
        android:label="Авторизация"
        tools:layout="@layout/fragment_auth" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="dev.hawk0f.itutor.features.register.presentation.ui.RegisterFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_register" />
    <action
        android:id="@+id/action_global_authFragment"
        app:destination="@id/authFragment" />
    <action
        android:id="@+id/action_global_registerFragment"
        app:destination="@id/registerFragment" />
    <fragment
        android:id="@+id/mainContentFragment"
        android:name="dev.hawk0f.itutor.features.maincontent.MainContentFragment"
        tools:layout="@layout/fragment_main_content" />
    <action
        android:id="@+id/action_global_mainContentFragment"
        app:destination="@id/mainContentFragment" />
</navigation>